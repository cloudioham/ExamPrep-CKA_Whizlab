apiVersion: apps/v1
kind: Deployment
metadata:
  name: ubuntu-deployment
  namespace: alpha
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ubuntu
  template:
    metadata:
      labels:
        apps: ubuntu
    spec:
      containers:
      - name: ubuntu-container
        image: ubuntu
        command: ["/bin/sh", "-c", "tail -f /dev/null"]
        volumeMounts:
        - name: hostpath-storage
          mountPath: /tmp/data
      volumes:
      - name: hostpath-storage
        hostPath:
          path: /tmp/hostpathDir
          type: DirectoryOrCreate